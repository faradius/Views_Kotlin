<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_rowWeight="6"
    android:layout_columnWeight="4"
    android:rowCount="6"
    android:columnCount="4">

    <TextView
        android:id="@+id/tvTotal"
        style="@style/AppTheme.BotonCalculadora.Total"
        android:text="Total"
        android:layout_row="0"
        android:layout_rowSpan="1"
        android:layout_columnSpan="4"
        android:layout_columnWeight="4"
        android:textAlignment="textStart"/>

    <TextView
        android:id="@+id/signo_c"
        android:tag="C"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:layout_column="0"
        android:layout_row="1"
        android:text="C"
        android:layout_columnSpan="2"
        android:layout_marginRight="1dp"
        android:layout_gravity="fill_horizontal"
        />

    <TextView
        android:id="@+id/signo_del"
        android:background="#EA4D39"
        android:layout_column="2"
        android:layout_row="1"
        android:layout_columnSpan="1"
        android:layout_marginLeft="0dp"
        android:layout_gravity="fill_vertical"
        android:text=""
        android:paddingRight="31dp"
        android:paddingLeft="31dp"
        android:drawableStart="@drawable/ic_delete"/>

    <TextView
        android:id="@+id/numero_7"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="2"/>

    <TextView
        android:id="@+id/numero_8"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"/>

    <TextView
        android:id="@+id/numero_9"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="2"/>

    <TextView
        android:id="@+id/numero_4"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="3"/>

    <TextView
        android:id="@+id/numero_5"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="3"/>

    <TextView
        android:id="@+id/numero_6"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="3"/>

    <TextView
        android:id="@+id/numero_1"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="4"/>

    <TextView
        android:id="@+id/numero_2"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="4"/>

    <TextView
        android:id="@+id/numero_3"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="4"/>

    <TextView
        android:id="@+id/punto"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:text="."
        android:gravity="center_horizontal"
        android:layout_gravity="fill_horizontal"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="5"/>

    <TextView
        android:id="@+id/cero"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="5"/>

    <TextView
        android:id="@+id/signo_igual"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="5"/>

    <TextView
        android:id="@+id/signo_div"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_columnSpan="1"
        android:layout_column="3"
        android:layout_row="1"/>

    <TextView
        android:id="@+id/signo_por"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_columnSpan="1"
        android:layout_column="3"
        android:layout_row="2"
        android:layout_marginTop="1dp"/>

    <TextView
        android:id="@+id/signo_menos"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_columnSpan="1"
        android:layout_column="3"
        android:layout_row="3"
        android:layout_marginTop="1dp"/>

    <TextView
        android:id="@+id/signo_mas"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_columnSpan="1"
        android:layout_column="3"
        android:layout_row="4"
        android:layout_rowSpan="2"
        android:layout_marginTop="1dp"/>

</GridLayout>